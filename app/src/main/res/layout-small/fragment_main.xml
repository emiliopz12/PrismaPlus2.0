<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkCyan"
    tools:context=".fragments.MainFragment">

    <LinearLayout
        android:layout_weight="0.9"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/relative_fact"
            android:background="@color/colorDarkBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".36">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="FacturaciÃ³n"

                android:textColor="#ddd"
                android:textSize="24sp"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight=".36">


            <RelativeLayout
                android:background="@color/colorDCyan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Productos"
                    android:textColor="#000"
                    android:textSize="24sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/onboarding"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Listados"
                    android:textColor="#000"
                    android:textSize="24sp"/>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_clients"
            android:background="@color/colorDarkCyan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".27">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Clientes"
                android:paddingTop="30dp"
                android:textColor="#ddd"
                android:textSize="24sp" />


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:src="@drawable/footer_login"/>

</LinearLayout>