<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".90"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/client_label"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/spinner_client"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_format">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:paddingStart="2dp"
                    android:text="Condici贸n"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Situaci贸n"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Moneda"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="TC"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_condition"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".25"
                    android:background="@drawable/spinner_format">

                </Spinner>

                <Spinner
                    android:id="@+id/spinner_situation"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".25"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/spinner_format">

                </Spinner>

                <Spinner
                    android:id="@+id/spinner_currency"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".25"
                    android:background="@drawable/spinner_format">

                </Spinner>

                <EditText
                    android:id="@+id/TC"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight=".25"
                    android:text="0"
                    android:inputType="number"
                    android:background="@drawable/edit_text_square">

                </EditText>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.35"
                    android:gravity="bottom"
                    android:paddingStart="2dp"
                    android:text="Producto"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.65"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Descripci贸n"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinner_item"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".35"
                    android:background="@drawable/spinner_format">

                </Spinner>


                <EditText
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:background="@drawable/edit_text_square"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:maxLength="160"
                    android:padding="4dp">

                </EditText>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:paddingStart="2dp"
                    android:text="Cantidad"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Neto"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Precio"
                    android:textColor="#000" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight=".20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="12dp"
                        android:gravity="bottom"
                        android:layout_centerHorizontal="true"
                        android:text="IV"
                        android:textColor="#000" />

                </RelativeLayout>



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.25"
                    android:gravity="bottom"
                    android:paddingStart="6dp"
                    android:text="Monto IV"
                    android:textColor="#000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/cant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="4dp"
                    android:text="1"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/neto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:backgroundTint="#aaa"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="4dp"
                    android:focusableInTouchMode="false"
                    android:inputType="none|number"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/precio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="4dp"
                    android:textAlignment="textEnd" />

                <RelativeLayout
                    android:layout_marginEnd="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20">

                    <CheckBox
                        android:id="@+id/checkIV"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="6dp"/>

                </RelativeLayout>


                <EditText
                    android:id="@+id/montoIV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:backgroundTint="#aaa"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:paddingStart="2dp"
                    android:text="Desc %"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:text="Desc"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.35"
                    android:gravity="bottom"
                    android:text="Nat. Descuento"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.20"
                    android:gravity="bottom"
                    android:text="Total"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight=".05"
                    android:gravity="bottom"
                    android:textColor="#000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"

                android:weightSum="1">

                <EditText
                    android:id="@+id/descPor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:ems="10"
                    android:inputType="number"
                    android:padding="4dp"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:backgroundTint="#aaa"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:padding="4dp"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/natDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight=".35"
                    android:padding="4dp"
                    android:background="@drawable/edit_text_square"
                    android:ems="10"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".20"
                    android:background="@drawable/edit_text_square"
                    android:backgroundTint="#aaa"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:padding="4dp"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:textAlignment="textEnd" />

                <ImageButton
                    android:id="@+id/add_row"
                    android:layout_width="4dp"
                    android:layout_height="23dp"
                    android:layout_weight=".05"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/add" />

            </LinearLayout>

            <TableLayout
                style="bor"
                android:id="@+id/tableProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".10"
                        android:background="#CCCCCC"
                        android:text="Cant"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".40"
                        android:background="#CCCCCC"
                        android:text="Descripci贸n"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:background="#CCCCCC"
                        android:textAlignment="center"
                        android:text="Precio"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:background="#CCCCCC"
                        android:text="Total"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:background="#CCCCCC"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:background="#E5E5E5"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".40"
                        android:background="#E5E5E5"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:background="#E5E5E5"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".20"
                        android:background="#E5E5E5"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:background="#E5E5E5"
                        android:text=""
                        android:textColor="#000"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="20"
                android:background="@color/colorDCyan" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="true"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".65"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Observaciones"
                            android:textColor="#000" />

                        <EditText
                            android:id="@+id/observations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_square"

                            android:inputType="textMultiLine"
                            android:lines="2"
                            android:maxLength="160"
                            android:padding="4dp"
                            android:singleLine="true"
                            android:textColor="#000">

                        </EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:text="Forma Pago"
                                android:textColor="#000" />

                            <Spinner
                                android:id="@+id/spinner_pay"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight=".60"
                                android:background="@drawable/spinner_format">

                            </Spinner>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".35"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/genSub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sub Total: 0"
                            android:textAlignment="textEnd"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/genDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descuento: 0"
                            android:textAlignment="textEnd"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/genIV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IV: 0"
                            android:textAlignment="textEnd"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/genTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total: 0"
                            android:textAlignment="textEnd"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

