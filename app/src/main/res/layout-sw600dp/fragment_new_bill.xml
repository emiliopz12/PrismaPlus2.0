<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/client_label"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginEnd="10dp"
                />

            <Spinner
                android:background="@drawable/spinner_format"
                android:id="@+id/spinner_client"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="4dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="30dp"
                android:text="Condición"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingStart="2dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:text="Situación"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingStart="6dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:text="Moneda"
                android:paddingStart="6dp"
                android:textColor="#000"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:text="TC"
                android:paddingStart="6dp"
                android:textColor="#000"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <Spinner
                android:id="@+id/spinner_condition"
                android:background="@drawable/spinner_format"
                android:layout_width="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight=".25"
                android:layout_height="30dp">

            </Spinner>

            <Spinner
                android:id="@+id/spinner_situation"
                android:background="@drawable/spinner_format"
                android:layout_marginEnd="4dp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="30dp">

            </Spinner>

            <Spinner
                android:background="@drawable/spinner_format"
                android:id="@+id/spinner_currency"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_marginEnd="4dp"
                android:layout_height="30dp">

            </Spinner>

            <EditText
                android:id="@+id/TC"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:background="@drawable/edit_text_square"
                android:layout_height="30dp">

            </EditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="4dp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="30dp"
                android:text="Producto"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingStart="2dp"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:text="Descripción"
                android:layout_width="0dp"
                android:layout_weight="0.65"
                android:layout_height="30dp"
                android:gravity="bottom"
                android:textColor="#000"
                android:paddingStart="6dp"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginBottom="8dp"
            android:weightSum="1">

            <Spinner
                android:id="@+id/spinner_item"
                android:background="@drawable/spinner_format"
                android:layout_width="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight=".35"
                android:layout_height="30dp">

            </Spinner>


            <EditText
                android:padding="2dp"
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight=".65"
                android:maxLength="160"
                android:background="@drawable/edit_text_square"
                android:inputType="textMultiLine">

            </EditText>

        </LinearLayout>

    </LinearLayout>

</ScrollView>